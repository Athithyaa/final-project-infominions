extends layout

block content
    div.row.text-center
      div.twelve.columns CNN VISUALIZER
    div.row.text-center
      div.twelve.columns hyperparameters
    div.row.text-center
      div.ten.columns
          .container(style='float:left;margin-left:20px')
              div.excl(style='left:10px') input
              div Conv
              div ReLU
              div Pooling
              div.excl(style='right:10px')#out output
          .layerselector
              select#layerpicker
                 option ReLU
                 option Conv
                 option Pooling
              button.btn.btn-default#layerbutton Add
      div.two.columns
          button.btn.btn-default.btn-block#predict Predict
    div.row.text-center
      div.twelve.columns nn diagram
    div.row.text-center
      div.four.columns#bar_chart bar chart
          svg
      div.four.columns#line_chart line chart
          svg
      div.four.columns confusion matrix